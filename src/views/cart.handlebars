<div>
    <div class="container" style="margin: 20px;">
        <form action="http://localhost:8080/api/carts/" method="POST">
            <button class="btn btn-primary" type="submit">Create new Cart</button>
        </form>
    </div>
    <div class="container">
        <ul style="list-style-type: none">
            {{#each carts}}
            <li>
                <form action="http://localhost:8080/api/carts/{{this._id}}" method="GET">
                    <button class="btn btn-secondary" type="submit">{{this._id}}</button>
                </form>
            </li>
            <br>
            {{/each}}
        </ul>
    </div>
</div>