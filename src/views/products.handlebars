<div>
    <form action="http://localhost:8080/products/AddProduct" method="GET">
        <button type="submit">Add product</button>
    </form>
    <ul style="list-style-type: none">
        {{#each products}}
        <li>
            <form action="http://localhost:8080/products/{{this.id}}" method="GET">
                <button type="submit">{{this.title}}</button>
            </form>
        </li>
        <li>{{this.description}}</li>
        <li>{{this.code}}</li>
        <li>${{this.price}}</li>
        <li>{{this.status}}</li>
        <li>{{this.stock}}</li>
        <li>{{this.category}}</li>
        <li>
            <img src="{{this.image}}" alt="{{this.title}}" width="100" height="100">
        </li>

        <br><br>

        <form action="http://localhost:8080/products/{{product.id}}" method="GET">
            <button type="submit">Edit</button>
        </form>

        <button onclick="deleteProduct('{{product.id}}')">Delete</button>
        {{/each}}
    </ul>
</div>