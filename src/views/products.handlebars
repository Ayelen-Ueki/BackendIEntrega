<div>
    <form action="http://localhost:8080/api/products/AddProduct" method="GET">
        <button type="submit">Add product</button>
    </form>
    <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="/?category={{this}}" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="#">Cakes</a>
            <a class="dropdown-item" href="#">Cookies</a>
            <a class="dropdown-item" href="#">Others</a>
        </div>
    </div>
    <ul style="list-style-type: none">
        {{#each products}}
            <li>
                <form action="http://localhost:8080/api/products/{{this._id}}" method="GET">
                    <button type="submit">{{this.title}}</button>
                </form>
            </li>
            <li>{{this.description}}</li>
            <li>{{this.code}}</li>
            <li>${{this.price}}</li>
            <li>{{this.status}}</li>
            <li>{{this.stock}}</li>
            <li>{{this.category}}</li>
            <li>
                <img src="{{this.image}}" alt="{{this.title}}" width="100" height="100">
            </li>
        {{/each}}
    </ul>
</div>
<p>Page {{products.page}} of {{products.totalPages}}</p>
{{#if products.hasPrevPage}}
<a href="/?page={{products.prevPage}}">Previous</a>
{{/if}}

{{#if products.hasNextPage}}
<a href="/?page={{products.nextPage}}">Next</a>
{{/if}}
